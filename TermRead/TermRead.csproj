<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyTitle>TermRead</AssemblyTitle>
    <AssemblyDescription>Our own Readline solution for .NET</AssemblyDescription>
    <Description>Our own Readline solution for .NET</Description>
    <Version>0.2.0</Version>
    <Authors>Aptivi</Authors>
    <TargetFrameworks>netstandard2.1;net48</TargetFrameworks>
    <DebugType>portable</DebugType>
    <AssemblyName>TermRead</AssemblyName>
    <PackageId>TermRead</PackageId>
    <PackageTags>readline;gnu;console;shell;cui</PackageTags>
    <PackageProjectUrl>https://github.com/Aptivi/TermRead</PackageProjectUrl>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/Aptivi/TermRead</RepositoryUrl>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Company>Aptivi</Company>
    <Copyright>Copyright (c) 2022-2023 Aptivi.</Copyright>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
    <PackageIcon>OfficialAppIcon-TermRead-512.png</PackageIcon>
    <AssemblyVersion>0.2.0</AssemblyVersion>
    <PackageVersion>0.2.0</PackageVersion>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <None Include="OfficialAppIcon-TermRead-512.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Extensification" Version="2022.4.1" />
  </ItemGroup>

</Project>
